/* components/game/game.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
}

.header {
  margin-bottom: 40rpx;
}

.status {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.winner {
  color: #d81e06;
}

.board-wrapper {
  padding: 20rpx;
  background-color: #e0b471; /* Wood texture color */
  border-radius: 10rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.3);
}

.board {
  display: flex;
  flex-direction: column;
  /* 15 lines */
}

.row {
  display: flex;
}

.cell {
  position: relative;
  width: 46rpx; /* Size for mobile screen adaptation */
  height: 46rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Grid Lines logic */
.grid-line-horizontal {
  position: absolute;
  width: 100%;
  height: 2rpx;
  background-color: #5d4037;
  top: 50%;
  left: 0;
  z-index: 1;
}

.grid-line-vertical {
  position: absolute;
  height: 100%;
  width: 2rpx;
  background-color: #5d4037;
  top: 0;
  left: 50%;
  z-index: 1;
}

/* Fix grid lines for edges */
/* Using pseudo-classes might be complex in wxss for n-th child, relying on visual overlap usually works fine, 
   but strictly we could hide 'half' lines. For simplicity in this demo, standard cross is acceptable. */

.piece {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  z-index: 10;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.5);
}

.piece.black {
  background: radial-gradient(circle at 30% 30%, #666, #000);
}

.piece.white {
  background: radial-gradient(circle at 30% 30%, #fff, #ddd);
}

.last-move-marker {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background-color: red;
  border-radius: 50%;
  z-index: 11;
}

.controls {
  margin-top: 60rpx;
}

.restart-btn {
  width: 300rpx;
}
